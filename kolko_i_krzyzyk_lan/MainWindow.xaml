<Window x:Class="kolko_i_krzyzyk_lan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kolko_i_krzyzyk_lan"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock>Connect to game via ip</TextBlock>
        <TextBox x:Name="ip"></TextBox>
        <Button x:Name="joinButton" Click="connect">Connect</Button>
        <Button x:Name="hostButton" Click="host">Host</Button>
    </StackPanel>
</Window>
